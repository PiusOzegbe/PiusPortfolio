---
import Layout from "@layouts/Layout.astro";
import SiteHeader from "@components/layout/SiteHeader.astro";

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import go from "@icons/go.svg";
import flutter from "@icons/flutter.svg";
import rust from "@icons/rust.svg";
import mongo from "@icons/mongodb.svg";
import react from "@icons/react.svg";
import linux from "@icons/linux.svg";
import docean from "@icons/docean.svg";
import nginx from "@icons/nginx.svg";
import nodejs from "@icons/nodejs.svg";
import typescript from "@icons/typescript.svg";
import docker from "@icons/docker.svg";
import tailwindcss from "@icons/tailwindcss.svg";
import git from "@icons/git.svg";
import net from "@icons/net.svg";
import H2 from "@components/mdx/H2.astro";

type Tool = {
  name: string;
  description: string;
  logo: ImageMetadata;
  color: `#${string}`;
};

const tools: Tool[] = [
  {
    "name": "C# (ASP.NET)",
    "description": "My primary language for building robust full-stack web applications, used in both work and personal projects.",
    "logo": net,
    "color": "#1b7e1e"
  },
  {
    "name": "Node.js",
    "description": "My choice for efficient backend development, enabling scalable and fast server-side applications.",
    "logo": nodejs,
    "color": "#339933"
  },
  {
    "name": "TypeScript",
    "description": "A better JavaScript with static typing, making frontend and backend codebases more predictable.",
    "logo": typescript,
    "color": "#3178C6"
  },
  {
    "name": "Rust",
    "description": "My go-to for building performant and concurrent applications with safety and scalability. Still exploring, but itâ€™s growing on me!",
    "logo": rust,
    "color": "#DEA584"
  },
  {
  "name": "React",
  "description": "The go-to library for building dynamic and reusable UI components, makes expansion easier (most of the time).",
  "logo": react,
  "color": "#61DAFB"
},
{
  "name": "Flutter",
  "description": "My go-to framework for building beautiful, cross-platform applications with a consistent UI and great performance.",
  "logo": flutter,
  "color": "#0175C2"
},
{
    "name": "Tailwind CSS",
    "description": "CSS, but make it fun :)",
    "logo": tailwindcss,
    "color": "#38B2AC"
  },
  {
    "name": "Git",
    "description": "My go-to tool for version control.",
    "logo": git,
    "color": "#F05032"
  },
  {
    "name": "DigitalOcean",
    "description": "A reliable cloud platform I use for hosting, deployment, and managing scalable apps.",
    "logo": docean,
    "color": "#0080FF"
  },
  {
    "name": "Linux",
    "description": "An essential tool for development, deployment, and managing servers with unmatched flexibility.",
    "logo": linux,
    "color": "#FCC624"
  },
  {
    "name": "MongoDB",
    "description": "A NoSQL database solution I rely on for flexible and scalable data storage.",
    "logo": mongo,
    "color": "#47A248"
  },
  {
    "name": "NGINX",
    "description": "My trusted web server and reverse proxy for high-performance and secure web hosting.",
    "logo": nginx,
    "color": "#009639"
  }
]

---

<Layout title="Tools">
  <main class="container">
    <SiteHeader />

    <h2 class="text-3xl mb-3">Tools</h2>

    <!-- prettier-ignore -->
    <p>
      My primary stack includes C#, and TypeScript, but I have also explored other tools and languages, either out of necessity or curiosity.
    </p>

    <ul class="flex flex-col gap-y-4 lg:gap-y-5 mt-5">
      {
        tools.map((tool) => (
          <li class="w-full flex items-start md:items-center gap-3">
            <div
              class="w-10 min-w-10 md:w-12 md:min-w-12 aspect-square object-cover flex items-center justify-center rounded-md mt-1 md:mt-0"
              style={{ backgroundColor: tool.color }}>
              <Image src={tool.logo} alt={tool.name} class="w-5 md:w-6 aspect-square invert" />
            </div>

            <div class="space-y-0.5">
              <h3 class="text-xl">{tool.name}</h3>
              <p class="md:text-base opacity-75">{tool.description}</p>
            </div>
          </li>
        ))
      }
    </ul>

    <section class="my-8">
      <H2>Other things I have used</H2>

      <ul class="list-disc list-inside mt-3">
        <li><b>C</b> - school experience</li>
        <li><b>Astro</b></li>
        <li><b>Nextjs</b></li>
      </ul>
    </section>
  </main>
</Layout>
