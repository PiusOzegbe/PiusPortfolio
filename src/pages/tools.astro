---
import Layout from "@layouts/Layout.astro";
import SiteHeader from "@components/layout/SiteHeader.astro";

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import go from "@icons/go.svg";
import rust from "@icons/rust.svg";
import mongo from "@icons/mongodb.svg";
import react from "@icons/react.svg";
import linux from "@icons/linux.svg";
import docean from "@icons/docean.svg";
import nginx from "@icons/nginx.svg";
import nodejs from "@icons/nodejs.svg";
import typescript from "@icons/typescript.svg";
import docker from "@icons/docker.svg";
import tailwindcss from "@icons/tailwindcss.svg";
import git from "@icons/git.svg";
import net from "@icons/net.svg";
import H2 from "@components/mdx/H2.astro";

type Tool = {
  name: string;
  description: string;
  logo: ImageMetadata;
  color: `#${string}`;
};

const tools: Tool[] = [
  {
    name: "C# (ASP.NET)",
    description:
      "My first language and my go-to for full-stack web development, I currently use it at work and personally for web-based projects.",
    logo: net,
    color: "#6C3BAA",
  },
  {
    name: "Go",
    description: "Good choice for concurrent, performant & scalable backend services (and other things you definitely do not want to imagine) with single-binary* deployments.",
    logo: go,
    color: "#00ADD8",
  },
  {
    name: "Rust",
    description: "Good choice for concurrent, performant & scalable backend services (and other things you definitely do not want to imagine) with single-binary* deployments.",
    logo: rust,
    color: "#00ADD8",
  },
  {
    name: "Typescript",
    description:
      'Mostly a "linter" but better than nothing when working with Javascript. I use it for most of my frontend projects (Solid, React & Astro) and when I have to work with Bun or Node.js',
    logo: typescript,
    color: "#3178C6",
  },
  {
    name: "React",
    description:
      'Mostly a "linter" but better than nothing when working with Javascript. I use it for most of my frontend projects (Solid, React & Astro) and when I have to work with Bun or Node.js',
    logo: react,
    color: "#3178C6",
  },
  {
    name: "Tailwind CSS",
    description: 'A utility-first CSS framework which comes in quite handy for "designing in code" and making responsive designs easier to implement on the web.',
    logo: tailwindcss,
    color: "#38B2AC",
  },
  {
    name: "MongoDB",
    description: "A key-value store that I use for caching",
    logo: mongo,
    color: "#000",
  },
  {
    name: "Docker",
    description: "Useful for running applications in a consistent kind-of-reproducible environment, and my preferred way to develop and deploy applications.",
    logo: docker,
    color: "#2496ED",
  },
  {
    name: "NGINX",
    description: 'A utility-first CSS framework which comes in quite handy for "designing in code" and making responsive designs easier to implement on the web.',
    logo: nginx,
    color: "#38B2AC",
  },
  {
    name: "Linux",
    description: 'A utility-first CSS framework which comes in quite handy for "designing in code" and making responsive designs easier to implement on the web.',
    logo: linux,
    color: "#38B2AC",
  },
  {
    name: "Digital Ocean",
    description: 'A utility-first CSS framework which comes in quite handy for "designing in code" and making responsive designs easier to implement on the web.',
    logo: docean,
    color: "#38B2AC",
  },
  {
    name: "Git",
    description: "Uh... preferred and the most popular version control system?",
    logo: git,
    color: "#F05032",
  },
];
---

<Layout title="Tools">
  <main class="container">
    <SiteHeader />

    <h2 class="text-3xl mb-3">Tools</h2>

    <!-- prettier-ignore -->
    <p>
      My primary stack includes C#, and TypeScript, but I have also explored other tools and languages, either out of necessity or curiosity.
    </p>

    <ul class="flex flex-col gap-y-4 lg:gap-y-5 mt-5">
      {
        tools.map((tool) => (
          <li class="w-full flex items-start md:items-center gap-3">
            <div
              class="w-10 min-w-10 md:w-12 md:min-w-12 aspect-square object-cover flex items-center justify-center rounded-md mt-1 md:mt-0"
              style={{ backgroundColor: tool.color }}>
              <Image src={tool.logo} alt={tool.name} class="w-5 md:w-6 aspect-square invert" />
            </div>

            <div class="space-y-0.5">
              <h3 class="text-xl">{tool.name}</h3>
              <p class="md:text-base opacity-75">{tool.description}</p>
            </div>
          </li>
        ))
      }
    </ul>

    <section class="my-8">
      <H2>Other things I have used</H2>

      <ul class="list-disc list-inside mt-3">
        <li><b>C</b> - school experience</li>
        <li><b>Astro</b> - just for this project :), but I enjoyed it</li>
        <li><b>Nextjs</b></li>
      </ul>
    </section>
  </main>
</Layout>
