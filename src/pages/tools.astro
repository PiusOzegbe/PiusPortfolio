---
import Layout from "@layouts/Layout.astro";
import SiteHeader from "@components/layout/SiteHeader.astro";

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import go from "@icons/go.svg";
import flutter from "@icons/flutter.svg";
import rust from "@icons/rust.svg";
import mongo from "@icons/mongodb.svg";
import react from "@icons/react.svg";
import linux from "@icons/linux.svg";
import docean from "@icons/docean.svg";
import php from "@icons/php.svg";
import nginx from "@icons/nginx.svg";
import nodejs from "@icons/nodejs.svg";
import typescript from "@icons/typescript.svg";
import docker from "@icons/docker.svg";
import tailwindcss from "@icons/tailwindcss.svg";
import git from "@icons/git.svg";
import net from "@icons/net.svg";
import python from "@icons/python.svg";
import tensorflow from "@icons/tensorflow.svg";
import pandas from "@icons/pandas.svg";
import jupyter from "@icons/jupyter.svg";
import postgresql from "@icons/postgresql.svg";
import H2 from "@components/mdx/H2.astro";

type Tool = {
  name: string;
  description: string;
  logo: ImageMetadata;
  color: `#${string}`;
};

const tools: Tool[] = [
  {
    "name": "Python",
    "description": "My primary language for data science, statistical analysis, and machine learning projects with extensive experience in scientific computing.",
    "logo": jupyter,
    "color": "#3776AB"
  },
  {
    "name": "TensorFlow",
    "description": "Deep learning framework for building and training neural networks, used extensively in my machine learning and AI projects.",
    "logo": tensorflow,
    "color": "#FF6F00"
  },
  {
    "name": "Pandas",
    "description": "Essential data manipulation and analysis library for cleaning, transforming, and exploring datasets in my statistical work.",
    "logo": pandas,
    "color": "#130654"
  },
  {
    "name": "Jupyter",
    "description": "Interactive computing environment for data analysis, statistical modeling, and creating reproducible research notebooks.",
    "logo": jupyter,
    "color": "#F37626"
  },
  {
    "name": "PostgreSQL",
    "description": "Advanced relational database for storing and querying structured data in my data science and analytics applications.",
    "logo": postgresql,
    "color": "#336791"
  }
]

---

<Layout title="Tools">
  <main class="container">
    <SiteHeader />

    <h2 class="text-3xl mb-3">Tools</h2>

    <!-- prettier-ignore -->
    <p>
      My primary stack includes Python for data science and statistics. I have also explored other tools and languages, either out of necessity or curiosity.
    </p>

    <ul class="flex flex-col gap-y-4 lg:gap-y-5 mt-5">
      {
        tools.map((tool) => (
          <li class="w-full flex items-start md:items-center gap-3">
            <div
              class="w-10 min-w-10 md:w-12 md:min-w-12 aspect-square object-cover flex items-center justify-center rounded-md mt-1 md:mt-0"
              style={{ backgroundColor: tool.color }}>
              <Image src={tool.logo} alt={tool.name} class="w-5 md:w-6 aspect-square invert" />
            </div>

            <div class="space-y-0.5">
              <h3 class="text-xl">{tool.name}</h3>
              <p class="md:text-base opacity-75">{tool.description}</p>
            </div>
          </li>
        ))
      }
    </ul>

    <section class="my-8">
      <H2>Other things I have used</H2>

      <ul class="list-disc list-inside mt-3">
        <li><b>NumPy</b> - numerical computing</li>
        <li><b>Seaborn</b> - statistical data visualization</li>
        <li><b>SciPy</b> - scientific computing</li>
        <li><b>Streamlit</b> - data app framework</li>
        <li><b>FastAPI</b> - modern web framework</li>
      </ul>
    </section>
  </main>
</Layout>
